<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout 
        android:layout_width="260dp"
        android:layout_height="120dp"
        android:background="@drawable/load_dialog_bg"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:gravity="center"
        >
        <TextView 
            android:id="@+id/integral_exchange_tips1_tv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="哈哈哈"
            android:textColor="#323232"
            android:textSize="15sp"
            android:gravity="center"/>
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#d6d7dc"
            ></RelativeLayout>
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="horizontal"
            >
            <RelativeLayout
                android:id="@+id/integral_exchange_tips1_rl1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >
                <TextView
                    android:id="@+id/integral_exchange_tips1_tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="取消"
                    android:textColor="@color/common_red"
                    android:textSize="15sp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="#d6d7dc"
                ></RelativeLayout>
            <RelativeLayout
                android:id="@+id/integral_exchange_tips1_rl2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >
                <TextView 
                    android:id="@+id/integral_exchange_tips1_tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="确定"
                    android:textColor="@color/common_red"
                    android:textSize="15sp"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
