<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color_ff"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/loan_fragment_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="vertical"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/length_48"
        android:background="@color/colorPrimary"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="@dimen/size_18"
            android:textColor="@color/text_color_32"
            android:text="贷款"
            android:layout_centerInParent="true"/>

        <ImageView
            android:id="@+id/loan_fragment_refresh_iv"
            android:layout_width="@dimen/length_20"
            android:layout_height="@dimen/length_20"
            android:layout_alignParentRight="true"
            android:src="@mipmap/loan_refresh"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/length_10"/>
    </RelativeLayout>

    <ProgressBar
        android:id="@+id/common_web_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:progressDrawable="@drawable/web_pg"
        android:visibility="gone"
        />

    <WebView
        android:id="@+id/loan_fragment_web"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    </WebView>
</LinearLayout>
