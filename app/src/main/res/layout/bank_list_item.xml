<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/bg_color_ff"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/length_48"
        android:gravity="center_vertical"
        android:background="?android:attr/selectableItemBackground"
        >
        <ImageView
            android:id="@+id/bank_list_item_iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/logo"
            android:layout_marginLeft="@dimen/length_10"
            />

        <TextView
            android:id="@+id/bank_list_item_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="银行"
            android:textSize="@dimen/size_15"
            android:textColor="@color/text_color_32"
            android:layout_marginLeft="@dimen/length_10"/>
    </LinearLayout>

</LinearLayout>
