<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color_ff"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/me_fragment_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="vertical" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/length_48"
        android:background="@color/colorPrimary">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:text="我的"
            android:textColor="@color/text_color_32"
            android:textSize="@dimen/size_18" />

    </RelativeLayout>

    <include layout="@layout/line_cb" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/bg_color_ff">

        <TextView
            android:id="@+id/me_fragment_login_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="登陆/注册"
            android:textColor="@color/common_red"
            android:textSize="@dimen/size_16" />

        <RelativeLayout
            android:id="@+id/me_fragment_rl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?android:attr/selectableItemBackground"
            >

            <ImageView
                android:id="@+id/me_fragment_iv"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="@dimen/length_15"
                android:layout_centerVertical="true"
                android:src="@mipmap/me_fragment_head" />

            <TextView
                android:id="@+id/me_fragment_number_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/length_5"
                android:lines="1"
                android:text="123454556"
                android:textColor="@color/text_color_32"
                android:textSize="@dimen/size_14"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/me_fragment_iv"/>

            <ImageView
                android:layout_width="8.5dp"
                android:layout_height="@dimen/length_13"
                android:layout_marginRight="@dimen/length_15"
                android:src="@mipmap/icon_go"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/length_10"
        android:background="@color/bg_color_ef" />

    <RelativeLayout
        android:id="@+id/me_fragment_rl1"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true">

        <ImageView
            android:id="@+id/me_fragment_record_iv"
            android:layout_width="@dimen/length_12"
            android:layout_height="@dimen/length_13"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/length_15"
            android:src="@mipmap/me_fragment_record" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/length_10"
            android:layout_toRightOf="@+id/me_fragment_record_iv"
            android:text="取款记录"
            android:textColor="@color/text_color_32"
            android:textSize="@dimen/size_14" />

        <ImageView
            android:layout_width="8.5dp"
            android:layout_height="@dimen/length_13"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/length_15"
            android:src="@mipmap/icon_go" />
    </RelativeLayout>

    <include layout="@layout/line_ef" />

    <RelativeLayout
        android:id="@+id/me_fragment_rl2"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true">

        <ImageView
            android:id="@+id/me_fragment_card_iv"
            android:layout_width="@dimen/length_12"
            android:layout_height="@dimen/length_10"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/length_15"
            android:src="@mipmap/me_fragment_card" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/length_10"
            android:layout_toRightOf="@+id/me_fragment_card_iv"
            android:text="卡片管理"
            android:textColor="@color/text_color_32"
            android:textSize="@dimen/size_14" />

        <ImageView
            android:layout_width="8.5dp"
            android:layout_height="@dimen/length_13"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/length_15"
            android:src="@mipmap/icon_go" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/length_10"
        android:background="@color/bg_color_ef" />


    <RelativeLayout
        android:id="@+id/me_fragment_rl3"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true">

        <ImageView
            android:id="@+id/me_fragment_sever_iv"
            android:layout_width="@dimen/length_12"
            android:layout_height="@dimen/length_11"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/length_15"
            android:src="@mipmap/me_fragment_sever" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/length_10"
            android:layout_toRightOf="@+id/me_fragment_sever_iv"
            android:text="联系客服"
            android:textColor="@color/text_color_32"
            android:textSize="@dimen/size_14" />

        <ImageView
            android:layout_width="8.5dp"
            android:layout_height="@dimen/length_13"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/length_15"
            android:src="@mipmap/icon_go" />
    </RelativeLayout>

    <include layout="@layout/line_ef" />

    <RelativeLayout
        android:id="@+id/me_fragment_rl4"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true">

        <ImageView
            android:id="@+id/me_fragment_problem_iv"
            android:layout_width="@dimen/length_12"
            android:layout_height="@dimen/length_12"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/length_15"
            android:src="@mipmap/me_fragment_problem" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/length_10"
            android:layout_toRightOf="@+id/me_fragment_problem_iv"
            android:text="常见问题"
            android:textColor="@color/text_color_32"
            android:textSize="@dimen/size_14" />

        <ImageView
            android:layout_width="8.5dp"
            android:layout_height="@dimen/length_13"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/length_15"
            android:src="@mipmap/icon_go" />
    </RelativeLayout>

    <include layout="@layout/line_ef" />

    <RelativeLayout
        android:id="@+id/me_fragment_rl5"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        >

        <ImageView
            android:id="@+id/me_fragment_share_iv"
            android:layout_width="@dimen/length_20"
            android:layout_height="@dimen/length_20"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/length_12"
            android:src="@mipmap/me_fragment_share" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/length_10"
            android:layout_toRightOf="@+id/me_fragment_share_iv"
            android:text="分享"
            android:textColor="@color/text_color_32"
            android:textSize="@dimen/size_14" />

        <ImageView
            android:layout_width="8.5dp"
            android:layout_height="@dimen/length_13"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/length_15"
            android:src="@mipmap/icon_go" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_color_ef"
        >
        <Button
            android:id="@+id/me_fragment_quit_btn"
            android:layout_width="210dp"
            android:layout_height="40dp"
            android:background="@drawable/main_fragment_button_bg"
            android:text="退出登录"
            android:textColor="@color/bg_color_ff"
            android:textSize="@dimen/size_17"
            android:layout_centerInParent="true"
            android:visibility="gone"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

</LinearLayout>
