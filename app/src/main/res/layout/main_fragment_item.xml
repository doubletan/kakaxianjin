<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_color_ff"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        >
        <ImageView
            android:id="@+id/main_fragment_item_iv"
            android:layout_width="@dimen/length_25"
            android:layout_height="@dimen/length_25"
            android:src="@mipmap/main_fragment1"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/length_10"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/length_10"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/main_fragment_item_tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="名字"
                android:textColor="@color/text_color_32"
                android:textSize="@dimen/size_14"
                />
            <TextView
                android:id="@+id/main_fragment_item_tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="简介"
                android:textColor="@color/text_color_66"
                android:textSize="@dimen/size_10"
                android:layout_marginTop="@dimen/length_8"
                />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
