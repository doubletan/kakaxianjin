<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color_ef"
    android:orientation="vertical"
    tools:context="com.xinhe.kakaxianjin.activity.ModifyPasswordActivity">

    <include layout="@layout/toolbar"/>
    <include layout="@layout/line_cb"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/bg_color_ff"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/length_5">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="原密码"
            android:textSize="@dimen/size_13"
            android:textColor="@color/text_color_32"
            android:layout_marginLeft="@dimen/length_15"
            />
        <EditText
            android:id="@+id/modify_old_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:paddingLeft="@dimen/length_10"
            android:hint="请输入原密码"
            android:textSize="@dimen/size_13"
            android:maxLength="20"
            android:inputType="textPassword"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/bg_color_ff"
        android:gravity="center_vertical"
        android:layout_marginTop="0.5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改密码"
            android:textSize="@dimen/size_13"
            android:textColor="@color/text_color_32"
            android:layout_marginLeft="@dimen/length_15"
            />
        <EditText
            android:id="@+id/modify_new_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:paddingLeft="@dimen/length_10"
            android:hint="6-20位数字、英文、下划线组合"
            android:textSize="@dimen/size_13"
            android:maxLength="20"
            android:inputType="textPassword"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/bg_color_ff"
        android:gravity="center_vertical"
        android:layout_marginTop="0.5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认密码"
            android:textSize="@dimen/size_13"
            android:textColor="@color/text_color_32"
            android:layout_marginLeft="@dimen/length_15"
            />
        <EditText
            android:id="@+id/modify_new_repassword"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:paddingLeft="@dimen/length_10"
            android:hint="6-20位数字、英文、下划线组合"
            android:textSize="@dimen/size_13"
            android:maxLength="20"
            android:inputType="textPassword"
            />
    </LinearLayout>
    <Button
        android:id="@+id/modify_password_btn"
        android:layout_width="290dp"
        android:layout_height="40dp"
        android:background="@drawable/main_fragment_button_bg"
        android:text="确认修改"
        android:textColor="@color/bg_color_ff"
        android:textSize="@dimen/size_17"
        android:layout_centerInParent="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        />
</LinearLayout>
