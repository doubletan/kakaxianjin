<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color_ef"
    android:orientation="vertical"
    tools:context="com.xinhe.kakaxianjin.activity.PersonalInformationActivity">


    <include layout="@layout/toolbar"/>
    <include layout="@layout/line_cb"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/bg_color_ff"
        android:layout_marginTop="@dimen/length_10"
        android:clickable="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/length_10"
            android:text="头像"
            android:textColor="@color/text_color_32"
            android:textSize="@dimen/size_14" />

        <ImageView
            android:id="@+id/forgot_password_iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/length_15"
            android:src="@mipmap/me_fragment_head"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/bg_color_ff"
        android:layout_marginTop="0.5dp"
        android:clickable="true">


        <TextView
            android:id="@+id/forgot_password_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/length_10"
            android:text="手机号码"
            android:textColor="@color/text_color_32"
            android:textSize="@dimen/size_14" />
        <TextView
            android:id="@+id/forgot_password_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/length_10"
            android:textColor="@color/text_color_32"
            android:textSize="@dimen/size_14"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/forgot_password_rl3"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/bg_color_ff"
        android:layout_marginTop="@dimen/length_10"
        android:clickable="true">


        <TextView
            android:id="@+id/forgot_password_tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/length_10"
            android:text="修改密码"
            android:textColor="@color/text_color_32"
            android:textSize="@dimen/size_14" />

        <ImageView
            android:layout_width="8.5dp"
            android:layout_height="@dimen/length_13"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/length_15"
            android:src="@mipmap/icon_go" />
    </RelativeLayout>


</LinearLayout>
