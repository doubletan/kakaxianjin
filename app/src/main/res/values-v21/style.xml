<?xml version="1.0" encoding="utf-8"?>
<resources>
        <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
                <item name="colorPrimary">@color/colorPrimary</item>
                <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
                <item name="colorAccent">@color/colorAccent</item>
                <item name="windowActionBar">false</item>
                <item name="windowNoTitle">true</item>
        </style>

        <!--CheckBox颜色设置-->
        <style name="MyCheckBox" parent="@android:style/Widget.Material.CompoundButton.CheckBox">
                <item name="android:colorControlActivated">@color/common_red</item>
                <item name="android:colorControlNormal">@color/text_color_99</item>
        </style>


        <!--相机activity-->
        <style name="AppTheme.NoActionBar" parent="AppTheme">
                <item name="windowActionBar">false</item>
                <item name="windowNoTitle">true</item>
                <item name="android:windowTranslucentNavigation">false</item>
        </style>

</resources>
